<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#D4CDC7"
    tools:context=".Main"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#324A5E"
        android:text="MEMORYPICS"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="40dp"
        android:scaleType="fitStart"
        android:src="@mipmap/man"
        android:id="@+id/singleplayer"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/singleplayer"
        android:layout_centerHorizontal="true"
        android:textColor="#324A5E"
        android:text="Singleplayer"/>

    <ImageView
        android:text="Multiplayer"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/multiplayer"
        android:scaleType="fitStart"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/singleplayer"
        android:src="@mipmap/team"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/multiplayer"
        android:layout_centerHorizontal="true"
        android:textColor="#324A5E"
        android:text="Multiplayer"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sound"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:scaleType="fitStart"
            android:layout_centerInParent="true"
            android:src="@mipmap/speaker"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sound"
            android:layout_centerHorizontal="true"
            android:textColor="#324A5E"
            android:textSize="16dp"
            android:text="Sound on/off"/>

    </RelativeLayout>

</RelativeLayout>
